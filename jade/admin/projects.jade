extends ../layouts/admin.jade

block content
  .wl-projects
    h3: b 프로젝트
    hr

    form.wl-projects-filter.container-fluid

      .row.wl-projects-filter-row
        .col-sm-2: span: b 분야          
        .col-sm-10
          .switch-button.showcase-switch-button
            input#switch-button-1(name='switch-radio', type='radio')
            label(for='switch-button-1')
            span  전체목록

          .switch-button.showcase-switch-button
            input#switch-button-2(name='switch-radio', type='radio')
            label(for='switch-button-2')
            span  개발

          .switch-button.showcase-switch-button
            input#switch-button-3(name='switch-radio', type='radio')
            label(for='switch-button-3')
            span  디자인

          .switch-button.showcase-switch-button
            input#switch-button-4(name='switch-radio', type='radio')
            label(for='switch-button-4')
            span  기획

          .switch-button.showcase-switch-button
            input#switch-button-5(name='switch-radio', type='radio')
            label(for='switch-button-5')
            span  총괄

      .row.wl-projects-filter-row
        .col-sm-2: span: b 지역
        .col-sm-10
          select.form-control.chosen-select(data-placeholder='시, 도')
            option
            option(value='United States') United States
            option(value='United Kingdom') United Kingdom
            option(value='Afghanistan') Afghanistan
            option(value='Albania') Albania
            option(value='Algeria') Algeria


      .row.wl-projects-filter-row
        .col-sm-2: span: b 상태
        .col-sm-10
          ul.list-unstyled.list-inline.showcase-btn
            - for(var i=0;i<6;i++) {
              li
                button.btn.btn-default.btn-circle(type='button') Default
            - }

    hr

    table.table.table-bordered.wl-white
        thead
          tr
            th 프로젝트 명
            th 클라이언트
            th 연락처
            th 예상금액
            th 분야
            th 지역
            th 상태
        tbody
          -for(var i = 0; i < 10; i++) {
            tr
              td 워드프레스 홈페이지 제작 (22p)
              td abcd
              td 01012341234
              td 6,000,000원
              td 개발
              td 서울
              td 검수요청
          -}

    include ../includes/pagin.admin.jade

block css
  link(rel='stylesheet', href='../../libs/brio-admin/assets/css/switch-buttons/switch-buttons.css')
  link(rel='stylesheet', href='../../libs/brio-admin/assets/css/plugins/bootstrap-chosen/chosen.css')

block js
  script(src='../../libs/brio-admin/assets/js/plugins/bootstrap-chosen/chosen.jquery.js')
